{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"array-bracket-newline": 0,
		"func-name-matching": 0,
		"id-length": 0,
		"max-statements": 0,
		"new-cap": [2, {
			"capIsNewExceptions": [
				"ToUint32"
			],
		}],
		"no-magic-numbers": 0,
		"no-negated-condition": 0,
		"operator-linebreak": [2, "before"],
	},

	"overrides": [
		{
			"files": "**/*.mjs",
			"rules": {
				"no-restricted-exports": 0,
			},
		},
		{
			"files": "test/**/*",
			"rules": {
				"max-lines-per-function": 0,
			},
		}
	]
}
